<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <ImageView
        android:id="@+id/iv_error"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_error_page" />
    <Button
        android:id="@+id/btn_error"
        android:background="@drawable/bt_error_selector"
        android:layout_below="@id/iv_error"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="网络出小差了哦,点击重试"
        android:textColor="@android:color/darker_gray"
        android:layout_alignRight="@id/iv_error"
        android:layout_alignLeft="@id/iv_error"
        />

</RelativeLayout>